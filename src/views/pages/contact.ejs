<div class="feature-area-1 space" style="margin-top: 4rem;">
    <div class="container">
        <div class="row gy-4 align-items-center justify-content-center">
            <div class="col-xl-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-card-icon">
                        <img src="assets/img/icon/location-pin-alt.svg" alt="icon">
                    </div>
                    <div class="feature-card-details">
                        <h4 class="feature-card-title">
                            Office Location
                        </h4>
                        <p class="feature-card-text">
                            <%= data.companyLocation %>
                        </p>

                        <a href="https://maps.google.com/" class="link-btn">
                            <span class="link-effect">
                                <span class="effect-1">Get direction</span>
                                <span class="effect-1">Get direction</span>
                            </span>
                            <img src="assets/img/icon/arrow-left-top.svg" alt="icon">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-card-icon">
                        <img src="assets/img/icon/speech-bubble.svg" alt="icon">
                    </div>
                    <div class="feature-card-details">
                        <h4 class="feature-card-title">
                            Email Address
                        </h4>
                        <p class="feature-card-text">
                            <%= data.companyEmail %>
                        </p>
                        <a href="mailto:<%= data.companyEmail %>" class="link-btn">
                            <span class="link-effect">
                                <span class="effect-1">LET'S MAKE IT HAPPEN</span>
                                <span class="effect-1">LET'S MAKE IT HAPPEN</span>
                            </span>
                            <img src="assets/img/icon/arrow-left-top.svg" alt="icon">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-card-icon">
                        <img src="assets/img/icon/phone.svg" alt="icon">
                    </div>
                    <div class="feature-card-details">
                        <h4 class="feature-card-title">
                            Contact Number
                        </h4>
                        <p class="feature-card-text">+91 <%= data.companyPhoneNumber %>
                        </p>

                        <a href="tel:<%= data.companyPhoneNumber %>" class="link-btn">
                            <span class="link-effect">
                                <span class="effect-1">Call anytime</span>
                                <span class="effect-1">Call anytime</span>
                            </span>
                            <img src="assets/img/icon/arrow-left-top.svg" alt="icon">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contact-area-1 space bg-theme">
    <% if (data.companyLocationIframe) { %>
        <% let mapFrame=data.companyLocationIframe ; %>
            <div class="contact-map shape-mockup wow img-custom-anim-left" data-wow-duration="1.5s"
                data-wow-delay="0.2s" data-left="0" data-top="-100px" data-bottom="140px">
                <%- mapFrame %>
            </div>
            <% } %>
                <div class="container">
                    <div class="row align-items-center justify-content-end">
                        <div class="<%= data.companyLocationIframe ? 'col-lg-6' : 'col-lg-12' %>">
                            <div class="contact-form-wrap">
                                <div class="title-area mb-30">
                                    <h2 class="sec-title">Let’s Start Your Project Today</h2>
                                    <p>Have a question or ready to get started? Fill out the form below or contact us
                                        directly,
                                        and we’ll get back to you as
                                        soon as possible.</p>
                                </div>
                                <form id="contact-form" action="/contact" method="POST"
                                    class="contact-form ajax-contact">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control style-border" name="name"
                                                    id="name" placeholder="Full name*" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="email" class="form-control style-border" name="email"
                                                    id="email" placeholder="Email address*" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input type="tel" class="form-control style-border" name="phone"
                                                    id="phone" placeholder="Phone Number" maxlength="10">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <textarea name="message" placeholder="Details" id="contact-message"
                                                    class="form-control style-border"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-btn col-12">
                                        <button type="submit" class="btn mt-20">
                                            <span class="link-effect">
                                                <span class="effect-1">LET'S MAKE IT HAPPEN</span>
                                                <span class="effect-1">LET'S MAKE IT HAPPEN</span>
                                            </span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
</div>

<!-- Snackbar Notification -->
<div id="snackbar" class="snackbar">Message sent successfully!</div>

<style>
    /* Snackbar Styling */
    .snackbar {
        visibility: hidden;
        min-width: 250px;
        background-color: #333;
        color: #fff;
        text-align: center;
        border-radius: 5px;
        padding: 16px;
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        font-size: 16px;
    }

    .snackbar.show {
        visibility: visible;
        animation: fadein 0.5s, fadeout 0.5s 3s forwards;
    }

    @keyframes fadein {
        from {
            bottom: 20px;
            opacity: 0;
        }

        to {
            bottom: 30px;
            opacity: 1;
        }
    }

    @keyframes fadeout {
        from {
            bottom: 30px;
            opacity: 1;
        }

        to {
            bottom: 20px;
            opacity: 0;
        }
    }
</style>